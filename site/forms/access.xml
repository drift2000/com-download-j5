<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="general">
        <field name="message"
            type="textarea"
            label="Message:"
            hint="Additional details"
        />
        <field name="fullname"
            type="text"
            label="Name:"
            required="true"
            hint="Your name*"
        />
        <field name="email"
            type="email"
            label="E-mail:"
            required="true"
            validate="email"
            hint="E-mail*"
        />
        <field name="company"
            type="text"
            label="Company:"
            required="true"
            hint="Company*"
        />
        <field name="page_name"
            type="text"
            label="page_name:"
            hint="Page name"
        />
        <field name="page_url"
            type="text"
            label="page_url:"
            hint="Page url"
        />
        <field name="download_file"
            type="text"
            label="download_file:"
            hint="Download file"
        />
        <field name="policy"
            type="checkbox"
            label="Terms of Use, Privacy Policy, Cookies Policy"
            required="true"
            hint="policy"
        />

    </fieldset>

</form>