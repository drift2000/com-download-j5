<?xml version="1.0" encoding="utf-8"?>

<form>

    <fieldset name="details" label="COM_DOWNLOAD_ITEM_FIELD_DETAILS">

        <field name="id" type="hidden" />

        <field name="cid"
            type="text"
            class="inputbox"
            required="true"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_CID"
            description="COM_DOWNLOAD_ITEM_FIELD_CID_DESC"
        />

        <field name="url"
            type="text"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_URL"
            description="COM_DOWNLOAD_ITEM_FIELD_URL_DESC"
        />

        <field name="category"
            type="text"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_CATEGORY"
            description="COM_DOWNLOAD_ITEM_FIELD_CATEGORY_DESC"
        />

        <field name="class"
            type="text"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_CLASS"
            description="COM_DOWNLOAD_ITEM_FIELD_CLASS_DESC"
        />

        <field name="group"
            type="text"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_GROUP"
            description="COM_DOWNLOAD_ITEM_FIELD_GROUP_DESC"
        />

        <field name="product"
            type="text"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_PRODUCT"
            description="COM_DOWNLOAD_ITEM_FIELD_PRODUCT_DESC"
        />

        <field name="compounds"
            type="text"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_COMPNDS"
            description="COM_DOWNLOAD_ITEM_FIELD_COMPNDS_DESC"
        />

        <field name="usersgroup"
            type="text"
            required=""
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_USERSGROUP"
            description="COM_DOWNLOAD_ITEM_FIELD_USERSGROUP_DESC"
        />
        <field
            name="access_level"
            type="accesslevel"
            required="true"
            default="2"
            label="JFIELD_ACCESS_LABEL"
            filter="UINT"
            validate="options"
            description="COM_DOWNLOAD_ITEM_FIELD_ACCESS_DESC"
        />
        <field name="usersgroup"
            type="text"
            required="true"
            default=""
            label="COM_DOWNLOAD_ITEM_USERSGROUP"
            description="COM_DOWNLOAD_ITEM_USERSGROUP_DESCRIPTION"
        />

        <field name="emailsend"
            type="email"
            class="inputbox"
            required="true"
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_EMAILSEND"
            description="COM_DOWNLOAD_ITEM_FIELD_EMAILSEND_DESC"
        />

        <field name="manager"
            type="text"
            class="inputbox"
            required=""
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_MANAGER"
            description="COM_DOWNLOAD_ITEM_FIELD_MANAGER_DESC"
        />
        <field
            name="user_id"
            type="user"
            required="true"
            label="COM_DOWNLOAD_ITEM_FIELD_MANAGER"
            validate="UserId"
            description="COM_DOWNLOAD_ITEM_FIELD_MANAGER_DESC"
        />
        <field name="manager"
            type="text"
            class="inputbox"
            required="true"
            default=""
            label="COM_DOWNLOAD_ITEM_MANAGER"
            description="COM_DOWNLOAD_ITEM_MANAGER_DESCRIPTION"
        />

        <field name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="form-select-color-state"
            filter="intval"
            size="1"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="publish_up"
            type="calendar"
            label="COM_DOWNLOAD_PUBLISH_UP_LABEL"
            description="COM_DOWNLOAD_PUBLISH_UP_DESC"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field name="type"
            type="text"
            class="inputbox"
            required=""
            default=""
            label="COM_DOWNLOAD_ITEM_FIELD_TYPE"
            description="COM_DOWNLOAD_ITEM_FIELD_TYPE_DESC"
        />

    </fieldset>

</form>